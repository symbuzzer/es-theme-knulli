		<text name="gameCounts"
		
			extra="true"
			visible="({game:playcount}) &gt; 0 ? 1 : 0"
			
		>
		<!-- text must begin by alt+0160 space -->
		<text> 

			${lang.gamePlayers}: {game:players}
			${lang.timesPlayed}: {game:playcount}
			${lang.lastPlayed} ${lang.at} {game:lastplayed}</text>

		</text>
		
